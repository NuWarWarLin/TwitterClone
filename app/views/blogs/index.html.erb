<div class="container">
<h1>Blog List</h1>
<div id="blog_list">
<table class="table">
  <tr>
    <th>Content</th>
    <th colspan=3>Functions</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td class="content"><%= blog.content %></td>
    <td class="function"><%= link_to 'Check details', blog_path(blog.id) %></td>
    <td class="function"><%= link_to "Edit Blog", edit_blog_path(blog.id) %></td>
    <td class="function"><%= link_to 'Delete Blog', blog_path(blog.id), method: :delete ,data: { confirm: 'Are you sure you want to delete? ' } %></td>
  </tr>
<% end %>
</table>
</div>
<div class="btn"><%= link_to'Post new blog ', new_blog_path%></div>
</div>
